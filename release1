            },
            {
                id: 'ender-3-v2',
                name: 'Ender 3 V2',
                brand: 'Creality',
                buildVolume: { x: 220, y: 220, z: 250 },
                materials: ['PLA', 'ABS', 'PETG'],
                nozzleDiameter: [0.4],
                layerHeight: { min: 0.1, max: 0.3 },
                heatedBed: true,
                maxBedTemp: 100,
